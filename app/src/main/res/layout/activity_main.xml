<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.yukicalendar.MainActivity">

    <ImageView
        android:id="@+id/app_image"
        android:layout_marginTop="200dp"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_date_range"/>

    <RelativeLayout
        android:layout_marginTop="80dp"
        android:layout_below="@id/app_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:gravity="center_horizontal"
            android:textSize="35sp"
            android:id="@+id/calendar_name"
            android:text="@string/app_name"
            android:textColor="@color/title_color"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />


        <TextView
            android:id="@+id/calendar_subtext"
            android:layout_marginTop="10dp"
            android:gravity="center_horizontal"
            android:layout_below="@id/calendar_name"
            android:textColor="@color/title_color"
            android:textSize="18sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/calendar_subtext"/>


    </RelativeLayout>


